              <%= cl_image_tag event.invitee.photo.key, width: 60, height: 60, crop: :fill, class: "avatar-large" %>
            <% end %>
            <div class="notification-content">
              <h6> <%= event.invitee.full_name %></h6>
              <p><small><%= event.start_time.strftime("%d/%m/%Y") %> <!-- <br> <%= event.end_time.strftime("%d/%m/%Y") %> --></small></p>
              <p> <%= event.title %></p>
              <p><%= event.content %></p>
            </div>

            <div class="notification-actions">
            <!--   <%#= link_to "Edit", edit_event_path(event), method: : %> -->
              <%#= link_to "Decline", decline_event_path(event), method: :patch %>
              <%#= link_to "Join", approve_event_path(event), method: :patch %>
            </div>
          </div>
        <% end %>

    </div>

  </div>
</div>

<div class="menu-right menu col-sm-3 col-xl-2">
