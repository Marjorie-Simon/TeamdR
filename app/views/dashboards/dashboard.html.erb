<div class="box container col-6">

  <div class="dashboard-top-content">
    <div class="home-greeting">
      <h1 class="text-center">Hi, I'm your dashboard</h1>
    </div>
  </div>

  <div class="graph-box col-12">
    <br>
    <h6>💻 Berlin office</h6>
    <%= area_chart @berlin_office, defer: true, xmin: @startdate, xmax: @enddate, width: "", height: "300px", xtitle: "Date", ytitle: "Nr. of employees", messages: {empty: "No data"}, colors: ["#81b61f"] %>

    <br>
    <h6>🏠 Berlin home office</h6>
    <%= area_chart @home_office, defer: true, xmin: Date.today, xmax: Date.today + 7, width: "", height: "300px", xtitle: "Date", ytitle: "Nr. of employees", messages: {empty: "No data"}, colors: ["#4e6e13"] %>

    <br>
    <h6>⛪️ Köln office</h6>
    <%= area_chart @köln_office, defer: true, xmin: Date.today, xmax: Date.today + 7, width: "", height: "300px", xtitle: "Date", ytitle: "Nr. of employees", messages: {empty: "No data"}, colors: ["#1a4b5d"] %>

    <br>
    <h6>✈ Business trip</h6>
    <%= area_chart @business_trip, defer: true, xmin: Date.today, xmax: Date.today + 7, width: "", height: "300px", xtitle: "Date", ytitle: "Nr. of employees", messages: {empty: "No data"} %>

    <br>
    <h6>🌴 Vacation</h6>
    <%= area_chart @vacation, defer: true, xmin: Date.today, xmax: Date.today + 7, width: "", height: "300px", xtitle: "Date", ytitle: "Nr. of employees", messages: {empty: "No data"}, colors: ["#6e6c13"] %>

    <br>
    <h6>🤒 Sick leave</h6>
    <%= area_chart @sick_leave, defer: true, xmin: Date.today, xmax: Date.today + 7, width: "", height: "300px", xtitle: "Date", ytitle: "Nr. of employees", messages: {empty: "No data"}, colors: ["#d34185"] %>
  </div>

</div>
<p class="date text-" style="position: absolute"><%= Date.today.strftime("%A, %d %b %Y") %></p>

