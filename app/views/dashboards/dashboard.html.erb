<div class="box container col-6">

  <div class="dashboard-top-content">
    <div class="home-greeting">
      <h1 class="text-center mt-3 mb-4">Hi, I'm your dashboard</h1>
    </div>
  </div>

  <div class="graph-box col-12">
    <br>
    <h3>🐻 Berlin office</h3>
    <%= area_chart @berlin_office, defer: true, xmin: @start_date, xmax: @end_date, width: "", height: "300px", ytitle: "Nr. of employees", messages: {empty: "No data"}, colors: ["#81b61f"] %>

    <br>
    <h3>💻 Home office</h3>
    <%= area_chart @home_office, defer: true, xmin: @start_date, xmax: @end_date, width: "", height: "300px", ytitle: "Nr. of employees", messages: {empty: "No data"}, colors: ["#4e6e13"] %>

    <br>
    <h3>⛪️ Köln office</h3>
    <%= area_chart @köln_office, defer: true, xmin: @start_date, xmax: @end_date, width: "", height: "300px", ytitle: "Nr. of employees", messages: {empty: "No data"}, colors: ["#1a4b5d"] %>

    <br>
    <h3>✈️ Business trip</h3>
    <%= area_chart @business_trip, defer: true, xmin: @start_date, xmax: @end_date, width: "", height: "300px", ytitle: "Nr. of employees", messages: {empty: "No data"} %>

    <br>
    <h3>🏝 Vacation</h3>
    <%= area_chart @vacation, defer: true, xmin: @start_date, xmax: @end_date, width: "", height: "300px", ytitle: "Nr. of employees", messages: {empty: "No data"}, colors: ["#6e6c13"] %>

    <br>
    <h3>🤒 Sick leave</h3>
    <%= area_chart @sick_leave, defer: true, xmin: @start_date, xmax: @end_date, width: "", height: "300px", ytitle: "Nr. of employees", messages: {empty: "No data"}, colors: ["#d34185"] %>
  </div>

</div>

<div class="menu-right menu col-sm-3 col-xl-2">
  <div class="notification-content">
  <div>
    <h3 class="date text- weather" style=""><%= Date.today.strftime("%A, %d %b %Y") %> <div class="text-center"> ☔️ </div> </h3>
  </div>
    <div class="dashboard-right-box">

      <fieldset class="fieldset field-happiness">
        <h6 class="text-center">Employee Happiness</h6>
          <%= bar_chart @employee_happiness, defer: true, ytitle: "😄      😐      😩", height: "200px", messages: {empty: "No data"}, colors: ["#81b61f"] %>
        <p class="text-center">votes</p>
      </fieldset>

      <div class="dashboard-form-bottom">
        <fieldset class="fieldset field-happiness">
          <h6 class="text-center">Search graphs</h6>
          <div class="graphfilter">
            <%= simple_form_for :timeframe, url: dashboard_path, method: :get do |f| %>
              <%#= f.label :startdate, "Starting date" %>
              <%#= f.date_field :startdate %>
              <%= f.input :start_date, as: :date, label: "Start Date", html5: true, input_html: {class: "graphdatepicker"} %>
              <%#= f.label :enddate, "Ending date" %>
              <%#= f.date_field :enddate %>
              <%= f.input :end_date, as: :date, label: "End Date", html5: true, input_html: {class: "graphdatepicker"} %>
              <%= f.submit "Submit", disable_with: 'Submiting...' %>
            <% end %>
          </div>
        </fieldset>
      </div>


