<div class="box container col-6">

  <div class="home-top-content">
    <div class="home-greeting">
      <h1>Hello!</h1>
    </div>

    <div class="day-goal">
      <h6>What is your main goal for today?</h6>
      <hr class="rounded">
    </div>
  </div>

  <div class="centered-box">
      <%= month_calendar events: @daily_statuses, attribute: :date do |date, daily_statuses| %>
        <%= link_to date.strftime("%e"), root_path({date: date}) %>

        <% daily_statuses.each do |daily_status| %>
          <div>
            <%= daily_status.title %>
          </div>
       <% end %>
    <% end %>
  </div>
</div>

<div class="menu-right menu col-3">
  <div class="notification-content">
    <p><small><%= @date %></small></p>

    <div class="status-selector navbar-expand-sm">
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <p class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">What is your status?</p>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="#">💻 in office</a>
              <a class="dropdown-item" href="#">🏠 home office</a>
              <a class="dropdown-item" href="#">✈ business trip</a>
              <a class="dropdown-item" href="#">🌴 vacation</a>
              <a class="dropdown-item" href="#">🤒 sick leave</a>
            </div>
          </li>
        </ul>
      </div>
    </div>

  </div>
</div>
