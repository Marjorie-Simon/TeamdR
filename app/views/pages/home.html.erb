<div class="box container col-6">

  <div class="home-top-content">
    <div class="home-greeting">
      <h1>Hello <%= current_user.first_name %>!</h1>
    </div>

    <div class="day-goal">
      <h6>What is your main goal for today?</h6>
      <input type="text", text-align: center;>
    </div>
  </div>

  <div class="centered-box">

      <%= month_calendar(attribute: :starts_at) do |date, events| %>
        <%= date %>

  <% events.each do |event| %>
    <div>
      <%= event.start_time %>
    </div>
  <% end %>

<% end %>
  </div>
<button id="modal-btn"> Rate your day!</button>
</div>

<!-- Button trigger modal -->




<!-- Modal -->
<div class="modal">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <span class="close-btn">&times;</span>
      <p>How was your day <%= current_user.first_name %> ?</p>
        <div class="rating-stars-container">
          <div class="rating-stars">
            <i class="rating-star fa fa-star-o" data-rating="1"></i>
            <i class="rating-star fa fa-star-o" data-rating="2"></i>
            <i class="rating-star fa fa-star-o" data-rating="3"></i>
            <i class="rating-star fa fa-star-o" data-rating="4"></i>
            <i class="rating-star fa fa-star-o" data-rating="5"></i>
          </div>
        </div>
    </div>
  </div>
</div>













<div class="menu-right menu col-3">
  <div class="notification-content">
    <p><small><%= Date.today %></small></p>

    <div class="status-selector navbar-expand-sm">
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <p class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">What is your status?</p>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="#">💻 in office</a>
              <a class="dropdown-item" href="#">🏠 home office</a>
              <a class="dropdown-item" href="#">✈ business trip</a>
              <a class="dropdown-item" href="#">🌴 vacation</a>
              <a class="dropdown-item" href="#">🤒 sick leave</a>
            </div>
          </li>
        </ul>
      </div>
    </div>

  </div>
</div>
